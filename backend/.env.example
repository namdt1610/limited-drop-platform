# Backend Environment Variables

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ecommerce_local?sslmode=disable

# Server
PORT=3030

# Performance
GOGC=200

# CORS
CORS_ORIGIN=*

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3030/api/auth/callback/google

# Cloudinary (Image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# PayOS (Payment gateway)
PAYOS_CLIENT_ID=your-payos-client-id
PAYOS_API_KEY=your-payos-api-key
PAYOS_CHECKOUT_URL=https://pay.payos.vn/web/v1/checkout-sessions
PAYOS_RETURN_URL=http://localhost:3000/checkout/success
PAYOS_CANCEL_URL=http://localhost:3000/checkout/cancel

# Resend (Email service)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Google Sheets (optional) - when set, orders will be appended to this Sheet
GSSHEET_SPREADSHEET_ID=your-spreadsheet-id
GSSHEET_SHEET_NAME=Sheet1
GDRIVE_SERVICE_ACCOUNT=./gdrive-service-account.json

GFORM_FIELD_NAME
GFORM_FIELD_PHONE
GFORM_FIELD_EMAIL
GFORM_FIELD_ADDRESS
GFORM_FIELD_DROP
GFORM_FIELD_AMOUNT
GFORM_FIELD_TXTIME